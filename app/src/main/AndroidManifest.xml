<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.utar.drawertest">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drawertest">
        <activity android:name=".CreateActivity"></activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UpdateActivity" />
        <activity android:name=".SubmissionUpdateActivity" />

        <activity android:name=".ui.home.StudentActivity" />
        <activity android:name=".ui.review.ReviewActivity" />
        <activity android:name=".ui.home.TeacherReviewActivity" />
        <activity android:name=".ui.post.PostFormActivity" />
        <activity android:name=".ui.home.StudentsSubmissionActivity" />
        <activity android:name=".ui.home.AssignmentsActivity" />
        <activity android:name=".ui.home.SubmissionStudentsActivity" />
        <activity android:name=".ui.home.StudentPostActivity" />
        <activity android:name=".ui.home.StudentJoinActivity" />

        <activity
            android:name=".ui.login.LoginActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Drawertest.NoActionBar" />
    </application>

</manifest>